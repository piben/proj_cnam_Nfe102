{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Transporteur list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomtransporteur</th>
                <th>Teltransporteur</th>
                <th>Datecreatetrans</th>
                <th>Dateupdatetrans</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('transporteur_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nomtransporteur }}</td>
                <td>{{ entity.teltransporteur }}</td>
                <td>{% if entity.datecreatetrans %}{{ entity.datecreatetrans|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateupdatetrans %}{{ entity.dateupdatetrans|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('transporteur_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('transporteur_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('transporteur_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
